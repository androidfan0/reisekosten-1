- model_class = Verpflegungsmehraufwand
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:reise_id)
      %th= model_class.human_attribute_name(:datum)
      %th= model_class.human_attribute_name(:stunden)
      %th= model_class.human_attribute_name(:nachweis)
      %th= model_class.human_attribute_name(:ersparnis)
      %th= model_class.human_attribute_name(:maxBetrag)
      %th= model_class.human_attribute_name(:nachweisBetrag)
      %th= model_class.human_attribute_name(:pauschale)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @verpflegungsmehraufwands.each do |verpflegungsmehraufwand|
      %tr
        %td= link_to verpflegungsmehraufwand.id, verpflegungsmehraufwand_path(verpflegungsmehraufwand)
        %td= verpflegungsmehraufwand._id
        %td= verpflegungsmehraufwand.reise_id
        %td= verpflegungsmehraufwand.datum
        %td= verpflegungsmehraufwand.stunden
        %td= verpflegungsmehraufwand.nachweis
        %td= verpflegungsmehraufwand.ersparnis
        %td= verpflegungsmehraufwand.maxBetrag
        %td= verpflegungsmehraufwand.nachweisBetrag
        %td= verpflegungsmehraufwand.pauschale
        %td=l verpflegungsmehraufwand.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_verpflegungsmehraufwand_path(verpflegungsmehraufwand), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), verpflegungsmehraufwand_path(verpflegungsmehraufwand), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_verpflegungsmehraufwand_path, :class => 'btn btn-primary'
