= form_for @pauschale, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :stunden, :class => 'control-label'
    .controls
      = f.text_field :stunden, :class => 'text_field'
  .control-group
    = f.label :betrag, :class => 'control-label'
    .controls
      = f.text_field :betrag, :class => 'text_field'
  .control-group
    = f.label :typ, :class => 'control-label'
    .controls
      = f.text_field :typ, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), pauschales_path, :class => 'btn'
